#include <iostream>
using namespace std;

int main()
{
	cout << "Lets find the size of DATA TYPES!" << endl;

	//outputs

	cout << "The size of an integer is " << sizeof(int) << " bytes." << endl;
	cout << "The size of an double is " << sizeof(double) << " bytes." << endl;
	cout << "The size of an float is " << sizeof(float) << " bytes." << endl;
	cout << "The size of an char is " << sizeof(char) << " bytes." << endl;
	cout << "The size of an string is " << sizeof(string) << " bytes." << endl;

	return 0;
}
