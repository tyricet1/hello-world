#include <iostream>
using namespace std;

int main()
{
	// variables

	double oceanLevel = 1.5;
	double oceanLevel5;
	double oceanLevel7;
	double oceanLevel10;

	cout << "Let see how much will the ocean rise in years." << endl;

	// calculations used
	oceanLevel5 = oceanLevel * 5;
	oceanLevel7 = oceanLevel * 7;
	oceanLevel10 = oceanLevel * 10;

	// outputs
	cout << "THe ocean level is currently at " << oceanLevel << endl;
	cout << "The ocean levels in 5 years: " << oceanLevel5 << endl;
	cout << "The ocean levels in 7 years: " << oceanLevel7 << endl;
	cout << "The ocean levels in 10 years: " << oceanLevel10 << endl;

	return 0;
}
