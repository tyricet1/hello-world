#include <iostream>
using namespace std;

int main()
{
	// variables
	double weight;
	double mass;
	
	cout << "This program will determaine the Mass. \n\n";

	//get data
	cout << "Please enter how many newtons: ";
	cin >> mass;
	
	
	//Calculations
	weight = 9.8 * mass;

	//decision
	if (weight < 10)
	{
		cout << "The object is too light.\n\n";
	}
	else if (weight > 1000)
	{
		cout << "The object is too heavy. \n\n";
	}
	else
	{
		cout << "Ok, you are within range.\n\n";
	}

	//output
	cout << "you're weight is " << weight << endl;

	return 0;
}
